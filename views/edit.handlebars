<div class="container" style="margin-top: 2rem; text-align:center">
  <h2>修改餐廳資料</h2>
  <div style="margin-top: 2rem; text-align:center">
    <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
      <div class="form-group">
        <label for="name">餐廳名稱</label>
        <input type="text" id="name" name="name" value="{{restaurant.name}}" required>
      </div>
      <div class="form-group">
        <label for="name_en">餐廳英文名稱</label>
        <input type="text" id="name_en" name="name_en" value="{{restaurant.name_en}}">
      </div>
      <div class="form-group">
        <label for="category">餐廳類別</label>
        <input type="text" id="category" name="category" value="{{restaurant.category}}" required>
      </div>
      <div class="form-group">
        <label for="image">餐廳照片</label>
        <input type="text" id="image" name="image" value="{{restaurant.image}}" required>
      </div>
      <div class="form-group">
        <label for="location">餐廳地點</label>
        <input type="text" id="location" name="location" value="{{restaurant.location}}">
      </div>
      <div class="form-group">
        <label for="phone">餐廳電話</label>
        <input type="text" id="phone" name="phone" value="{{restaurant.phone}}">
      </div>
      <div class="form-group">
        <label for="google_map">餐廳地圖</label>
        <input type="text" id="google_map" name="google_map" value="{{restaurant.google_map}}">
      </div>
      <div class="form-group">
        <label for="rating">餐廳評分</label>
        <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}" required>
      </div>
      <div class="form-group">
        <label for="description">餐廳敘述</label>
        <textarea name="description" id="description" class="form-control form-control-lg" rows="5"
          required>{{restaurant.description}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>